{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "download-only",
            "displayName": "Download Only",
            "generator": "Visual Studio 16 2019",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "DOWNLOAD_ONLY": {
                    "type": "Bool",
                    "value": "ON"
                }
            }
        },
        {
            "name": "base",
            "hidden": true,
            "generator": "Visual Studio 16 2019",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": {
                    "type": "string",
                    "value": "z:\\Qt\\5.13.1\\msvc2017_64"
                }
            }
        },
        {
            "name": "x64",
            "hidden": true,
            "inherits": "base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "Dependencies x64 (Debug)",
            "inherits": "x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Debug"
                }
            }
        },
        {
            "name": "x64-release",
            "displayName": "Dependencies x64 (Release)",
            "inherits": "x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Release"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Download Only",
            "configurePreset": "download-only",
            "configuration": "Debug"
        },
        {
            "name": "x64-debug",
            "configurePreset": "x64-debug",
            "configuration": "Debug",
            "targets": [
                "INSTALL"
            ]
        },
        {
            "name": "x64-release",
            "configurePreset": "x64-release",
            "configuration": "Release",
            "targets": [
                "INSTALL"
            ]
        }
    ]
}
